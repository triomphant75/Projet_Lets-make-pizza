<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="main-container" stylesheets="@/css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizza.client.controlleur.AccueilControleur">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label styleClass="app-title" text="Pizz'app">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>
    
    <ImageView fx:id="imgPizza" fitHeight="256.0" fitWidth="256.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@/images/pizza.png" />
    </ImageView>
    
    <Label styleClass="headline" text="World's greatest food ever!">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    
    <Label styleClass="subtitle" text="Tell the world how awesome your app is and why they should use it!" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    
    <Button fx:id="btnCommander" onAction="#onCommanderClick" prefHeight="40.0" prefWidth="200.0" styleClass="primary-button" text="Passer commande !" />
    
    <Label fx:id="lblStatus" styleClass="status-label" />
</VBox>
