<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: #ffffff;" stylesheets="@/css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizza.client.controlleur.LivraisonControleur">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    
    <Label fx:id="lblMessage" styleClass="section-title" text="Commande livrée !">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>
    
    <ImageView fx:id="imgPizza" fitHeight="256.0" fitWidth="256.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@/images/pizza.png" />
    </ImageView>
    
    <Label fx:id="lblDetails" styleClass="details-text" text="Y'a plus qu'à déguster" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    
    <Button fx:id="btnAccueil" onAction="#onAccueilClick" prefHeight="40.0" prefWidth="200.0" styleClass="primary-button" text="Retour à l'accueil !" />
</VBox>
